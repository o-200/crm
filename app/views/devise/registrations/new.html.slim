.devise
  h2 Sign up

  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource

    .field
      = f.input :email, autofocus: true, autocomplete: "email"

    .field
      = f.label :password
      - if @minimum_password_length
        em
        br #{@minimum_password_length} characters minimum

      = f.input_field :password, autocomplete: "new-password", class: "form-control form-control-sm password optional"

    .field
      = f.input :password_confirmation, autocomplete: "new-password"

    .actions
      = f.submit "Sign up"

  = render "devise/shared/links"
